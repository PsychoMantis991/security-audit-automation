{
  "port_scan": {
    "type": "comprehensive",
    "scan_types": {
      "quick": {
        "ports": "top-100",
        "timing": "T4",
        "enabled": false
      },
      "comprehensive": {
        "ports": "top-1000", 
        "timing": "T4",
        "enabled": true
      },
      "full": {
        "ports": "1-65535",
        "timing": "T3",
        "enabled": false
      }
    },
    "advanced_options": {
      "version_detection": true,
      "os_detection": true,
      "script_scanning": true,
      "aggressive_timing": false,
      "fragment_packets": false
    },
    "custom_ports": null,
    "udp_scan": {
      "enabled": false,
      "top_ports": 100
    },
    "threads": 50,
    "timeout": 300
  },
  "service_detection": {
    "version_detection": {
      "enabled": true,
      "intensity": 7,
      "timeout": 30
    },
    "os_detection": {
      "enabled": true,
      "aggressive": false,
      "guess": true
    },
    "script_scan": {
      "enabled": true,
      "categories": [
        "default",
        "safe",
        "discovery"
      ],
      "exclude_categories": [
        "intrusive",
        "malware",
        "dos"
      ],
      "custom_scripts": [
        "http-title",
        "http-headers",
        "ssl-cert",
        "smb-enum-shares",
        "dns-zone-transfer"
      ]
    }
  },
  "web_enumeration": {
    "enabled": true,
    "http_methods": ["GET", "POST", "HEAD", "OPTIONS"],
    "technology_detection": {
      "enabled": true,
      "methods": ["headers", "content", "cookies", "meta_tags"]
    },
    "common_paths": [
      "/",
      "/robots.txt",
      "/sitemap.xml",
      "/.well-known/",
      "/admin",
      "/administrator", 
      "/api",
      "/api/v1",
      "/api/v2",
      "/backup",
      "/config",
      "/dashboard",
      "/login",
      "/panel",
      "/phpmyadmin",
      "/status",
      "/test",
      "/wp-admin",
      "/wp-content",
      "/wp-login.php"
    ],
    "http_options": {
      "timeout": 10,
      "follow_redirects": true,
      "verify_ssl": false,
      "user_agent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36"
    },
    "screenshot": {
      "enabled": false,
      "tool": "gowitness"
    }
  },
  "smb_enumeration": {
    "enabled": true,
    "null_session": {
      "enabled": true,
      "test_shares": true,
      "enum_users": true,
      "enum_groups": true
    },
    "authentication": {
      "guest_access": true,
      "common_credentials": false,
      "credentials_file": null
    },
    "shares": {
      "enumerate": true,
      "test_access": true,
      "list_contents": false,
      "download_files": false
    },
    "rpc_enumeration": {
      "enabled": true,
      "enumerate_users": true,
      "enumerate_groups": true,
      "enumerate_policies": true
    }
  },
  "dns_enumeration": {
    "enabled": true,
    "reverse_lookup": {
      "enabled": true,
      "timeout": 5
    },
    "zone_transfer": {
      "enabled": true,
      "timeout": 30,
      "test_all_ns": true
    },
    "subdomain_enum": {
      "enabled": false,
      "wordlist": "/opt/pentest/wordlists/SecLists/Discovery/DNS/dns-Jhaddix.txt",
      "threads": 20
    },
    "record_types": ["A", "AAAA", "CNAME", "MX", "NS", "TXT", "SOA"]
  },
  "ssh_enumeration": {
    "enabled": true,
    "banner_grab": true,
    "algorithm_detection": true,
    "auth_methods": true,
    "key_exchange": false
  },
  "ftp_enumeration": {
    "enabled": true,
    "anonymous_login": true,
    "banner_grab": true,
    "directory_listing": true,
    "bounce_scan": false
  },
  "smtp_enumeration": {
    "enabled": true,
    "user_enumeration": {
      "enabled": true,
      "methods": ["VRFY", "EXPN", "RCPT"],
      "userlist": "/opt/pentest/wordlists/SecLists/Usernames/top-usernames-shortlist.txt"
    },
    "banner_grab": true,
    "command_support": true
  },
  "snmp_enumeration": {
    "enabled": true,
    "community_strings": ["public", "private", "community"],
    "walk_oids": true,
    "system_info": true,
    "network_info": true,
    "version": "2c"
  },
  "ldap_enumeration": {
    "enabled": true,
    "anonymous_bind": true,
    "base_dn_discovery": true,
    "schema_extraction": false,
    "user_enumeration": false
  },
  "mysql_enumeration": {
    "enabled": true,
    "banner_grab": true,
    "anonymous_login": true,
    "common_credentials": false,
    "database_enumeration": false
  },
  "mssql_enumeration": {
    "enabled": true,
    "banner_grab": true,
    "instance_discovery": true,
    "common_credentials": false
  },
  "rdp_enumeration": {
    "enabled": true,
    "banner_grab": true,
    "encryption_check": true,
    "nla_check": true
  },
  "vnc_enumeration": {
    "enabled": true,
    "banner_grab": true,
    "auth_methods": true,
    "screenshot": false
  },
  "stealth_mode": false,
  "evasion": {
    "enabled": false,
    "techniques": [
      "source_port_randomization",
      "fragment_packets",
      "decoy_scans",
      "timing_delays"
    ],
    "timing_template": "polite",
    "scan_delay": "random",
    "source_port": "random"
  },
  "output": {
    "format": "json",
    "detailed_results": true,
    "include_raw_output": false,
    "screenshots": false,
    "evidence_collection": true
  },
  "performance": {
    "max_concurrent_hosts": 10,
    "max_concurrent_ports": 100,
    "timeout_per_host": 600,
    "retry_failed_scans": 1,
    "adaptive_timing": true,
    "rate_limiting": {
      "enabled": false,
      "max_packets_per_second": 1000
    }
  },
  "reporting": {
    "generate_summary": true,
    "include_screenshots": false,
    "include_service_banners": true,
    "prioritize_findings": true,
    "risk_assessment": true
  },
  "integration": {
    "nuclei": {
      "enabled": true,
      "template_path": "/root/nuclei-templates",
      "severity": ["critical", "high", "medium"],
      "tags": ["network", "discovery", "misconfiguration"]
    },
    "metasploit": {
      "enabled": false,
      "auto_exploit": false,
      "auxiliary_modules": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "/opt/pentest/logs/enumeration.log",
    "console_output": true,
    "debug_mode": false
  },
  "verbose": true
}
