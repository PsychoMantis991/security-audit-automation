{
  "discovery_methods": [
    "ping_sweep",
    "arp_scan",
    "tcp_syn_scan"
  ],
  "ping_sweep": {
    "timeout": 1,
    "threads": 50,
    "count": 1,
    "enabled": true
  },
  "arp_scan": {
    "interface": "auto",
    "timeout": 1000,
    "enabled": true,
    "use_nmap_fallback": true
  },
  "tcp_syn_scan": {
    "ports": [
      21, 22, 23, 25, 53, 80, 110, 111, 135, 139, 143, 443, 445, 465, 587, 
      993, 995, 1023, 1025, 1433, 1521, 1723, 2049, 3306, 3389, 5060, 
      5432, 5900, 6379, 8080, 8443, 8888, 9200, 27017
    ],
    "threads": 100,
    "enabled": true,
    "timing": "T4"
  },
  "stealth_mode": false,
  "evasion": {
    "enabled": false,
    "techniques": [
      "fragment_packets",
      "decoy_scans",
      "random_delay"
    ],
    "scan_delay": 1,
    "fragment_size": 8,
    "decoy_count": 3
  },
  "output": {
    "format": "json",
    "include_timestamps": true,
    "include_statistics": true,
    "save_raw_data": false
  },
  "network_analysis": {
    "subnet_analysis": true,
    "broadcast_detection": true,
    "gateway_identification": true,
    "dns_server_detection": true
  },
  "performance": {
    "max_concurrent_hosts": 50,
    "timeout_per_host": 30,
    "retry_failed_hosts": 1,
    "adaptive_timing": true
  },
  "logging": {
    "level": "INFO",
    "file": "/opt/pentest/logs/discovery.log",
    "console_output": true
  },
  "verbose": true
}
